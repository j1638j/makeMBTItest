<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="card col-md-8 offset-md-2 col-xl-6 offset-xl-3 border rounded-3 border-2 border-primary mt-5 p-3">
            <div class="d-flex justify-content-center">
                <h2 class="m-3 mb-5">별명 변경</h2>
            </div>
            <form action="/changeNickname" method="POST" novalidate class="validated-form">
                <div class="p-3">
                    <input required name="password" id="password" type="password" class="form-control mb-3" placeholder="현재 비밀번호 입력">
                    <input required name="nickname" id="nickname" type="text" class="form-control mb-3" placeholder="새 별명 입력">
                </div>
                <div class="d-flex justify-content-end p-3">
                    <button class="btn btn-primary">별명 변경</button>
                </div>
            </form>   
        </div>
    </div>
</div>