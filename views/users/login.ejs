<% layout('layouts/boilerplate') %>
<div class="container mb-5">
    <div class="row">
        <div
            class="card col-md-8 offset-md-2 col-xl-6 offset-xl-3 border rounded-3 border-2 border-primary mt-5 p-3">
            <div class="card-body">
                <h3 class="card-title mb-4 mx-4">로그인</h3>
                <form action="/register" method="POST" novalidate class="validated-form">
                    <div class="mb-3 mx-4">
                        <label for="email" class="form-label">이메일</label>
                        <input required type="email" id="email" name="email" class="form-control">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3 mx-4">
                        <label for="password" class="form-label">비밀번호</label>
                        <input required type="password" id="password" name="password" class="form-control">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="d-flex flex-row-reverse mx-4">
                        <button class="btn btn-primary mt-3">로그인</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>