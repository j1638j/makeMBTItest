<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="card col-md-8 offset-md-2 col-xl-6 offset-xl-3 border rounded-3 border-2 border-primary mt-5 p-3">
            <div class="d-flex justify-content-center">
                <h2 class="m-3 mb-5">비밀번호 변경</h2>
            </div>
            <form action="/changePassword" method="POST" novalidate class="validated-form">
                <div class="p-3">
                    <input required type="password" name="currentpw" id="currentpw" class="form-control mb-3" placeholder="현재 비밀번호 입력">
                    <div class="mb-3">
                        <input required type="password" name="newpw" id="newpw" class="form-control mb-1 validate-password" placeholder="새 비밀번호 입력">
                        <div id="short-password-feedback" class="custom-invalid-feedback">비밀번호가 너무 짧습니다.</div>    
                    </div>
                    <div class="mb-3">
                        <input required type="password" name="newpw2" id="newpw2" class="form-control mb-1 validate-check-password" placeholder="새 비밀번호 다시 입력">    
                        <div id="password-match-feedback" class="custom-invalid-feedback">비밀번호와 일치하지 않습니다.</div>    
                    </div>
                </div>
                <div class="d-flex justify-content-end p-3">
                    <button class="btn btn-primary">비밀번호 변경</button>
                </div>
            </form>   
        </div>
    </div>
</div>



<script src="/registerValidation/validatePassword.js"></script>
<script src="/registerValidation/validateCheckPassword.js"></script>
