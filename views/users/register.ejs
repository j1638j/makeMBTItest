<% layout('layouts/boilerplate') %>

    <div class="container mb-5">
        <div class="row">
            <div
                class="card col-md-8 offset-md-2 col-xl-6 offset-xl-3 border rounded-3 border-2 border-primary mt-5 p-3">
                <div class="card-body">
                    <h3 class="card-title mb-4">회원가입</h3>
                    <form action="/register" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">이메일</label>
                            <input required type="email" id="email" name="email" class="form-control">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">비밀번호</label>
                            <input required type="password" id="password" name="password" class="form-control">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">별명</label>
                            <input required type="text" id="username" name="username" class="form-control" autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-flex flex-row-reverse">
                            <button class="btn btn-primary mt-3">회원가입</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>