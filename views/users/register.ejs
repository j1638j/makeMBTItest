<% layout('layouts/boilerplate') %>

    <div class="container mb-5">
        <div class="row">
            <div
                class="card col-md-8 offset-md-2 col-xl-6 offset-xl-3 border rounded-3 border-2 border-primary mt-5 p-3">
                <div class="card-body">
                    <h3 class="card-title mb-4 mx-4">회원가입</h3>
                    <form action="/register" method="POST" novalidate class="validated-form">
                        <div class="mb-3 mx-4">
                            <label for="username" class="form-label">이메일</label>
                            <input required type="email" id="username" name="username" class="form-control validate-email" autofocus required>
                            <div id="exist-email-feedback" class="custom-invalid-feedback">이미 사용중인 이메일입니다.</div>
                            <div id="invalid-email-feedback" class="custom-invalid-feedback">올바른 이메일 형식이 아닙니다.</div>
                            <div id="valid-email-feedback" class="custom-valid-feedback">사용 가능한 이메일입니다.</div>
                        </div>
                        <div class="mb-3 mx-4">
                            <label for="password" class="form-label">비밀번호</label>
                            <input placeholder="8자 이상"
                            type="password" id="password" name="password" class="form-control validate-password" required>
                            <div id="short-password-feedback" class="custom-invalid-feedback">비밀번호가 너무 짧습니다.</div>
                        </div>
                        <div class="mb-3 mx-4">
                            <label for="check-password" class="form-label">비밀번호 확인</label>
                            <input required type="password" id="check-password" name="check-password" class="form-control validate-check-password" required>
                            <div id="password-match-feedback" class="custom-invalid-feedback">비밀번호와 일치하지 않습니다.</div>
                        </div>
                        <div class="mb-3 mx-4">
                            <label for="nickname" class="form-label">별명</label>
                            <input required type="text" id="nickname" name="nickname" class="form-control" required>
                        </div>
                        <div class="d-flex flex-row-reverse mx-4">
                            <button class="btn btn-primary mt-3">회원가입</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/registerValidation/validateEmail.js"></script>
    <script src="/registerValidation/validatePassword.js"></script>
    <script src="/registerValidation/validateCheckPassword.js"></script>
